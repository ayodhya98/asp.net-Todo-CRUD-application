@model Category

<form method="post" asp-action="DeleteTodo">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 >
                <i class="bi bi-file-earmark-plus-fill"></i>&nbsp;
                Delete Task</h2>
                <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
        
            <input asp-for="Name" disabled class="form-control" />

          
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            
            <input asp-for="Description" disabled class="form-control" />

           
        </div>
        <button type="submit" class="btn btn-danger">D E L E T E</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to ToDo List</a>
    </div>
</form>

@section Scripts{
   @{
    <partial name="_ValidationScriptsPartial" />
    }
}

